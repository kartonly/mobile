<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/top16">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m8"
        android:paddingStart="@dimen/top16"
        android:paddingEnd="@dimen/top16"
        android:paddingBottom="@dimen/m12"
        tools:ignore="MissingConstraints"
        >


        <Button
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/f12"
            android:layout_marginTop="@dimen/m8"
            android:layout_marginStart="@dimen/top16"
            android:text=""
            android:width="25dp"
            android:height="10dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent">

        </Button>



        <TextView
            android:id="@+id/cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/m18"
            android:layout_marginStart="@dimen/top16"
            android:layout_marginEnd="@dimen/top16"
            android:textSize="@dimen/f16"
            android:textColor="@color/greyL"
            android:text=""
            >

        </TextView>


        <Button
            android:id="@+id/like"
            android:layout_width="@dimen/top24"
            android:layout_height="@dimen/top24"
            android:layout_marginTop="@dimen/m6"
            android:layout_marginEnd="@dimen/m12"
            android:background="@drawable/fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/cut"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>