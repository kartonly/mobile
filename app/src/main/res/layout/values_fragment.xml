<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/m12"
        android:layout_marginStart="@dimen/top16"
        android:layout_marginEnd="@dimen/top16"
        android:textSize="@dimen/f20"
        android:textColor="@color/greyL"
        android:text="@string/values"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/top16"
        android:paddingStart="@dimen/m8"
        android:paddingEnd="@dimen/m8"
        tools:listitem="@layout/item"
        tools:ignore="MissingConstraints"
        />

</androidx.constraintlayout.widget.ConstraintLayout>